{
  "packages": {
    ".": {
      "release-type": "simple",
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "generic",
          "path": "gradle.properties",
          "search": "(?m)^\\s*version\\s*=.*$",
          "replace": "version=${version}"
        }
      ]
    }
  }
}